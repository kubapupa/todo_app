<% if @task.count > 0 %>
    <% @task.each do |task| %>
        <div class="card mt-5">
            <div class="card-header">
                <%= task.created_at.to_formatted_s(:long) %>
                <%= link_to '', "delete/#{task.id}", class: 'btn-close', data_bs_dismiss: 'alert', aria_label: 'Close', type: 'button'%>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                <p><%= task.content %></p>
                <footer class="blockquote-footer"><%= task.username %></footer>
                </blockquote>
            </div>
        </div>
    <% end %>
    <%= render 'add_button'%>
<% else %>
    <%= render html: "<h1 class='text-center mt-5'> Brak zada≈Ñ </h1>".html_safe %>
    <%= render 'add_button' %>
<% end %>